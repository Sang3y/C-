int main() {
    int n, i, fact;
    cout << "enter a value:";
    cin >> n;
    fact = n;
    for (i = n-1; i >=1; i--) {
        fact = fact * i;//accumulation 
    }
    cout << "Fact(" << n << ") = " << fact << endl;
}
